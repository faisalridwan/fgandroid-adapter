<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".main.MainActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        style="@style/ItemMainDefault"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">
        <!--Card-->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:scaleType="matrix"
                android:src="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_judulHead"
                            style="@style/Judul"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="10dp"
                            android:text="@string/app_name" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_map" />
                            <TextView
                                android:id="@+id/tv_namaJalan"
                                style="@style/NamaJalan"
                                android:paddingTop="2dp"
                                android:text="Bandung Wetan, Bandung" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/Harga"
                                android:paddingTop="10dp"
                                android:text="Rp. "/>
                            <TextView
                                android:id="@+id/tv_harga"
                                style="@style/Harga"
                                android:paddingTop="10dp"
                                android:text="500.000"/>
                        </LinearLayout>
                        <TextView
                            style="@style/PerKamar"

                            android:text="per malam, per kamar" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_isi"
                    style="@style/Isi"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Id ullamcorper congue lobortis nullam amet sed. Tellus morbi nullam duis ut purus amet, tincidunt urna montes. " />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            style="@style/Star"
                            android:src="@drawable/ic_star"/>
                        <ImageView
                            style="@style/Star"
                            android:src="@drawable/ic_star" />
                        <ImageView
                            style="@style/Star"
                            android:src="@drawable/ic_star" />
                        <ImageView
                            style="@style/Star"
                            android:src="@drawable/ic_star" />
                        <ImageView
                            style="@style/Star"
                            android:src="@drawable/ic_star" />
                        <TextView
                            android:id="@+id/tv_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:paddingTop="8dp"
                            android:textSize="5dp"
                            android:text="9,5"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_masuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="170dp"
                        android:src="@drawable/ic_masuk"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>